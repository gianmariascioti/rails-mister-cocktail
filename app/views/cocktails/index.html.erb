<h1 style="text-align: center;">Jimmy's Cocktails Bar</h1>

<div class="container">
  <% @cocktails.each do |cocktail| %>
  <div class="col-xs-12 col-md-3">
    <div class="card-category card-cocktail" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.3)), url(<%= cocktail.image %>)">
      <%= link_to cocktail.name, cocktail_path(cocktail) %>
    </div>


  </div>
  <% end %>
</div>

<div class="link">
  <p><%= link_to "Make your cocktail", new_cocktail_path, class: "btn btn-info"%></p>
</div>
