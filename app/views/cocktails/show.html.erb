
<h1><%= @cocktail.name %></h1>

<h3>Recipe:</h3>

<div class="ingredient">
  <% @cocktail.doses.each do |dose| %>
    <div>
      <%= dose.ingredient.name%> || <%= dose.description %> || <%= link_to '⚔︎', dose_path(dose), method: :delete%>
    </div>
  <% end %>
</div>


<%= render 'doses/form' %>

<p>
  <%= link_to "Back to homepage", cocktails_path  %>
</p>



